<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edittext_back"
    tools:context=".activities.BusLineSelectorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_back_inverted"
            android:elevation="15dp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:text="Point Tracker App"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blue Line"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="100dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal"
            android:onClick="onClickBlueLine"
            android:background="@drawable/edittext_back"
            app:layout_constraintTop_toBottomOf="@+id/txt_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purple Line"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal"
            android:onClick="onClickPurpleLine"
            android:background="@drawable/edittext_back"
            app:layout_constraintTop_toBottomOf="@+id/btn_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orange Line"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal"
            android:onClick="onClickOrangeLine"
            android:background="@drawable/edittext_back"
            app:layout_constraintTop_toBottomOf="@+id/btn_purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green Line"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal"
            android:onClick="onClickGreenLine"
            android:background="@drawable/edittext_back"
            app:layout_constraintTop_toBottomOf="@+id/btn_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>